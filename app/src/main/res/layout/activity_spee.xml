<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aayushbhat.aayushiron.sivertongue.spee"
    android:background="#302e2e">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll1"
            android:visibility="gone">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You were speaking"
                android:textSize="55sp"
                android:fontFamily="@font/modeka"
                android:textColor="#B2682A"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="156"
                android:fontFamily="@font/modeka"
                android:textColor="#B2682A"
                android:gravity="center_horizontal"
                android:textSize="130sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Words Per Minute"
                android:fontFamily="@font/modeka"
                android:textColor="#B2682A"
                android:gravity="center_horizontal"
                android:textSize="55sp"
                android:paddingBottom="15sp"/>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Try to speak 2 words slower"
                android:fontFamily="@font/modeka"
                android:textColor="#B2682A"
                android:gravity="center_horizontal"
                android:textSize="55sp"/>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/go_back"
                android:background="@android:color/transparent"
                android:paddingTop="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:paddingBottom="35sp"
            android:id="@+id/ll2">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Warning: Do not press anything when done speaking"
                android:textColor="#B2682A"
                android:textSize="55sp"
                android:gravity="center_horizontal"
                android:layout_gravity="top"
                android:fontFamily="@font/modeka"
                android:paddingBottom="100sp"/>

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/record"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
